#:import _ utils.i18n._

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<ChallengerScreen>:
    grid:grid
    BoxLayout:
        pos_hint:{'top':1}
        size_hint_y: 0.2
        orientation:'horizontal'
        Button:
            text:_('Play')
            on_press:root.btn_play()
        Button:
            text:_('Next')
            on_press:root.btn_next()
    BoxLayout:
        pos_hint:{'top':0.8}
        size_hint_y: 0.2
        orientation:'horizontal'
        Label:
            text:_('Tap your answer')
    GridLayout:
        id:grid
        pos_hint:{'top':0.6}
        cols:6
