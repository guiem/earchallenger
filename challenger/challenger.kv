#:import _ utils.i18n._
#:import ButtonWithDisable utils.button_with_disable.ButtonWithDisable

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<ChallengerScreen>:
    grid:grid
    BoxLayout:
        pos_hint:{'top':1}
        size_hint_y: 0.1
        orientation:'horizontal'
        Button:
            text:_('Play')
            on_press:root.btn_play()
        Button:
            text:_('Next')
            on_press:root.btn_next()
        Button:
            text:root.btn_answer_label
            on_press:root.btn_answer(btn_cancel)
        Button:
            text:_('Solution')
            on_press:root.btn_solution()
        Button:
            text:_('Hint')
            on_press:root.btn_hints()
        ButtonWithDisable:
            id:btn_cancel
            active:False
            text:_('Cancel')
            on_press:root.btn_cancel()
    BoxLayout:
        pos_hint:{'top':0.9}
        size_hint_y: 0.2
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            Label:
                id:solution
                text:root.solution
        Label:
            text:_('Tap your answer')
    GridLayout:
        id:grid
        pos_hint:{'top':0.7}
        size_hint_y: 0.6
        size_hint_x: 1.0
        cols:8
    BoxLayout: 
        pos_hint:{'top':0.1}
        size_hint_y: 0.1
        orientation:'horizontal'
        Label:
            halign:'left'
            size_hint_x: 0.15
            text:_('Played times:')
        Label:
            halign:'left'
            size_hint_x: 0.05
            text:str(root.played_times)
        Label:
            halign:'left'
            size_hint_x: 0.15
            text:_('Hints:')
        Label:
            halign:'left'
            size_hint_x: 0.05
            text:str(root.hints)
        Label:
            size_hint_x: 0.60
        Button:
            text:_('Settings')
            on_press:root.btn_settings()
            
