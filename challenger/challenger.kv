#:import _ utils.i18n._
#:import ButtonWithDisable utils.button_with_disable.ButtonWithDisable

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<ChallengerScreen>:
    grid:grid
    BoxLayout:
        pos_hint:{'top':1}
        size_hint_y: 0.1
        orientation:'horizontal'
        Button:
            text:_('Play')
            on_press:root.btn_play()
        Button:
            text:_('Next')
            on_press:root.btn_next()
        Button:
            text:root.btn_answer_label
            on_press:root.btn_answer(btn_cancel)
        Button:
            text:_('Solution')
            on_press:root.btn_solution()
        ButtonWithDisable:
            id:btn_cancel
            active:False
            text:_('Cancel')
            on_press:root.btn_cancel()
    BoxLayout:
        pos_hint:{'top':0.9}
        size_hint_y: 0.2
        orientation:'vertical'
        Label:
            id:solution
            text:root.solution
        Label:
            text:_('Tap your answer')
    GridLayout:
        id:grid
        pos_hint:{'top':0.7}
        size_hint_y: 0.7
        size_hint_x: 1.0
        cols:8
