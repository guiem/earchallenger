#:import _ utils.i18n._

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<ChallengerScreen>:
    grid:grid
    BoxLayout:
        pos_hint:{'top':1}
        size_hint_y: 0.2
        orientation:'horizontal'
        Button:
            text:_('Play')
            on_press:root.btn_play()
        Button:
            text:_('Next')
            on_press:root.btn_next()
        Button:
            text:root.btn_answer_label
            on_press:root.btn_answer()
        Button:
            text:_('Solution')
            on_press:root.btn_solution()
    BoxLayout:
        pos_hint:{'top':0.8}
        size_hint_y: 0.2
        orientation:'vertical'
        Label:
            id:solution
            text:root.solution
        Label:
            text:_('Tap your answer')
    GridLayout:
        id:grid
        pos_hint:{'top':0.6}
        cols:6
    GridLayout:
        id:grid_solution
        pos_hint:{'top':0.4}
        cols:6
