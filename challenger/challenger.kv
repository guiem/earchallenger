
<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<ChallengerScreen>:
    grid:grid
    BoxLayout:
        pos_hint:{'center_x':0.5,'center_y':0.5}
        size_hint_x: 0.4
        size_hint_y: 0.6
        orientation:'vertical'
        Label:
            text:'Tab your answer'
            #text:_('Tab your answer')
        Button:
            text: 'Play'
            #text:_('Play')
            on_press:root.btnPlay()
    GridLayout:
        id:grid
        cols:3
