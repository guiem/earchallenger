#:kivy 1.0
#:import kivy kivy
#:import _ main._

<AudioBackground>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        PlayButton:
            text: _('Play')
            font_size: '25sp'
            on_press: app.play_sequence()
        NextButton:
            text: _('Next')
            font_size: '25sp'
            on_press: app.next_sequence()
        SolutionButton:
            text: _('Solution')
            font_size: '25sp'
            on_press: app.solution_sequence(solution_label)
        AnswerButton:
            text: _('Answer') if app.state == 'normal' else _('Submit')
            font_size: '25sp'
            on_press: app.answer()
        Label:
            height: 24
            text_size: self.size
            color: (1, 1, 1, .8)
            text: ''
            valign: 'middle'
            id: solution_label


