#:import _ utils.i18n._

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<StatsScreen>:
    BoxLayout:
        orientation:'horizontal'
        BoxLayout:
            orientation:'vertical'
            Label:
                text: _('Total games played: ')
            Label:
                text: str(root.num_games)
            Label:
                text: _('Total won: ')
            Label:
                text: str(root.num_won)
            Label:
                text: _('Total lost: ')
            Label:
                text: str(root.num_lost)
            Label:
                text: _('Percentile right: ')
            Label:
                text: '0' if root.num_games == 0 else str(round(float(root.num_won)/float(root.num_games)*100,2))+' %'
        Button:
            text:_('Back')
            on_press:root.btn_back()
