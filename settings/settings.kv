#:import _ utils.i18n._

<FullImage@Image>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            texture: self.texture
            size: self.size
            pos: self.pos

<SettingsScreen>:
    BoxLayout:
        orientation:'vertical'
        Slider:
            id: num_notes_slider
            min:1
            max:10
            orientation:'horizontal'
            value:5
        Label:
            text: str(num_notes_slider.value)
        Button:
            text:_('Save')
            on_press:root.btn_save()
        Button:
            text:_('Back')
            on_press:root.btn_back()